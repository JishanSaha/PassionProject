@model IEnumerable<Project.Models.CustomerDto>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/List.css" rel="stylesheet"/>

<h1><b><u>List Of Customers</u></b></h1>

<p>
    <a asp-action="New">Create New</a>
</p>
<table border ="2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Cid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Cid">Details</a> |
                    <a asp-action="ConfirmDelete" asp-route-id="@item.Cid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

