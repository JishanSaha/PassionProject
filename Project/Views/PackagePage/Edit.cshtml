@model Project.Models.PackageDto

@{
    ViewData["Title"] = "View";
}
<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&display=swap" rel="stylesheet">
<link href="~/css/PackageData.css" rel="stylesheet" />
<h1><b><u>Edit Package Details</u></b></h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-route-id="@Model.Pid">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pid" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Package Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <label asp-for="Description" class="control-label">PACKAGE DESCRIPTION</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="INPUT PACKAGE DESCRIPTION"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Package Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-link-container">
    <a asp-action="Index" class="cyber-link">
        <i class="las la-undo"></i>
        Back to List
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
