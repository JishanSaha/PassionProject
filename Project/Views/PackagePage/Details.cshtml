@* @model Project.Models.PackageDto *@

@* @{ *@
@*     ViewData["Title"] = "Package Details"; *@
@* } *@

@* <style> *@
@*     .cyber-details-container { *@
@*         background: rgba(0,0,0,0.8); *@
@*         border: 2px solid #ff6b6b; *@
@*         border-radius: 15px; *@
@*         padding: 2rem; *@
@*         margin: 2rem auto; *@
@*         max-width: 800px; *@
@*         box-shadow: 0 0 30px rgba(255,107,107,0.3); *@
@*         animation: tableEntrance 1s cubic-bezier(0.4, 0, 0.2, 1); *@
@*     } *@

@*     .cyber-details-table { *@
@*         width: 100%; *@
@*         border-collapse: collapse; *@
@*         margin-bottom: 2rem; *@
@*     } *@

@*     .cyber-details-table td { *@
@*         padding: 1.5rem; *@
@*         border-bottom: 1px solid #ff6b6b33; *@
@*     } *@

@*     .cyber-details-table tr:last-child td { *@
@*         border-bottom: none; *@
@*     } *@

@*     .video-container { *@
@*         position: relative; *@
@*         padding-top: 56.25%; /* 16:9 Aspect Ratio */ *@
@*         overflow: hidden; *@
@*         border: 2px solid #ff6b6b; *@
@*         border-radius: 10px; *@
@*         background: #000; *@
@*     } *@

@*     .video-container iframe { *@
@*         position: absolute; *@
@*         top: 0; *@
@*         left: 0; *@
@*         width: 100%; *@
@*         height: 100%; *@
@*         border: none; *@
@*     } *@

@*     .detail-label { *@
@*         color: #ff6b6b; *@
@*         text-shadow: 0 0 5px rgba(255,107,107,0.3); *@
@*         width: 30%; *@
@*     } *@

@*     .detail-value { *@
@*         color: #0ff; *@
@*         padding-left: 2rem; *@
@*     } *@
@* </style> *@

@* <div class="cyber-details-container"> *@
@*     <h1 class="cyber-title">⨠⨠⨠ PACKAGE PROTOCOL DETAILS ⨠⨠⨠</h1> *@

@*     <table class="cyber-details-table"> *@
@*         <tr> *@
@*             <td class="detail-label">PACKAGE IDENTIFIER</td> *@
@*             <td class="detail-value">@Model.Pid</td> *@
@*         </tr> *@
@*         <tr> *@
@*             <td class="detail-label">PROTOCOL NAME</td> *@
@*             <td class="detail-value">@Model.Name</td> *@
@*         </tr> *@
@*         <tr> *@
@*             <td class="detail-label">DESCRIPTION SCHEMA</td> *@
@*             <td class="detail-value">@Model.Description</td> *@
@*         </tr> *@
@*         <tr> *@
@*             <td class="detail-label">RESOURCE VIDEO</td> *@
@*             <td> *@
@*                 <div class="video-container"> *@
@*                     <iframe src="@Model.Video" *@
@*                             frameborder="0" *@
@*                             allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" *@
@*                             allowfullscreen> *@
@*                     </iframe> *@
@*                 </div> *@
@*             </td> *@
@*         </tr> *@
@*     </table> *@

@*     <div class="terminal-return"> *@
@*         <a asp-action="Index" class="cyber-button">↵ RETURN TO MAINFRAME</a> *@
@*     </div> *@
@* </div> *@

@* <!-- Reuse previous animations --> *@
@* <script> *@
@*     document.addEventListener('DOMContentLoaded', function() { *@
@*         const elements = document.querySelectorAll('.detail-value, .video-container'); *@
@*         elements.forEach((el, index) => { *@
@*             el.style.opacity = '0'; *@
@*             setTimeout(() => { *@
@*                 el.style.transition = 'opacity 0.5s ease, transform 0.5s ease'; *@
@*                 el.style.opacity = '1'; *@
@*                 el.style.transform = 'translateX(0)'; *@
@*             }, 100 * index); *@
@*         }); *@
@*     }); *@
@* </script> *@