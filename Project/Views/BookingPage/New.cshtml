@model Project.Models.BookingDto

@{
    ViewData["Title"] = "New";
}
<link href="~/css/BookingData.css" rel="stylesheet" />

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@500&display=swap" rel="stylesheet">

<h1>⨠⨠⨠ NEW BOOKING INTERFACE ⨠⨠⨠</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label> CUSTOMER IDENTIFIER</label>
                <input asp-for="CustomerId" class="form-control" placeholder="ENTER CUSTOMER ID CODE" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label> TEMPORAL COORDINATES</label>
                <input asp-for="BookingDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="BookingDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label> TRANSACTION PROTOCOL</label>
                <select asp-for="PaymentMethod" class="form-control">
                    <option value="CRYPTO">CRYPTOCURRENCY</option>
                    <option value="CREDIT CARD">CREDIT CARD</option>
                    <option value="DEBIT CARD">DEBIT CARD</option>
                    <option value="UPI">UPI</option>
                    <option value="PAYPAL">PAYPAL</option>
                    <option value="CASH">CASH</option>

                </select>
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label> CONNECTION STATUS</label>
                <select asp-for="Status" class="form-control">
                    <option value="ACTIVE">ACTIVE</option>
                    <option value="PENDING">PENDING SYNCHRONIZATION</option>
                    <option value="TERMINATED">TERMINATED</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="INITIATE BOOKING" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back-link-container">
    <a asp-action="Index" class="cyber-link">
        <i class="las la-undo"></i>
        RETURN TO MAINFRAME
    </a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}